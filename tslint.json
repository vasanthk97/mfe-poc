{
    "defaultSeverity": "error",
    "extends": [
        "tslint-sonarts"
    ],
    "linterOptions": {
        "exclude": [
            "src/serviceWorker.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "variable-name": false,
        "import-name": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        "no-duplicate-imports": true,
        "one-variable-per-declaration": [
            true,
            "ignore-for-loop"
        ],
        "no-identical-functions" : false,
        "arrow-parens": false,
        "prefer-const": true, 
        "no-var-keyword": true

    },
    "rulesDirectory": []
}